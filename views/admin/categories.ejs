  <body>
    <div class="screen-overlay"></div>
    <%- include('./partials/adminAside.ejs') %>
    <main class="main-wrap">
      <%- include('./partials/adminNav.ejs') %>
      <section class="content-main">
        <div class="content-header">
          <div>
            <h2 class="content-title card-title">Categories</h2>
            <p>Add, edit or delete a category</p>
          </div>
          <div>
            <input
              type="text"
              placeholder="Search Categories"
              class="form-control bg-white"
            />
          </div>
        </div>
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-md-3">
                <!-- Category -->
      
                <form id="category" action="/admin/addingCategory" method="post" onsubmit="return validateForm()">
                  <div class="container">
                    <div class="mb-4">
                      <label for="category_name" class="form-label">Name</label>
                      <input
                        type="text"
                        placeholder="Type the category name"
                        name="categoryName"
                        class="form-control"
                        id="category_name"
                        maxlength="30"
                      />
                      <div id="categoryNameError" style="color: red;"></div> <!-- Error message container for category name -->
                    </div>
                
                    <div class="mb-4">
                      <label class="form-label">Description</label>
                      <textarea
                        placeholder="Type the Description"
                        name="description"
                        class="form-control"
                        id="description"
                        maxlength="150"
                       
                      ></textarea>
                      <div id="descriptionError" style="color: red;"></div> <!-- Error message container for description -->
                    </div>
                  </div>
                  <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Create category</button>
                  </div>
                </form>
                
                
      
                <!-- ------------------------ -->
              </div>
              <div class="col-md-9">
                <div class="table-responsive">
                  <% if (locals.category) { %>

                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th class="text-center">
                            <h6>No.</h6>
                          </th>
                          <th>Name</th>
                          <th>Description</th>
                          <th>Status</th>
                          <th class="text-end">Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for( let i = 0; i < category.length; i++ ) { %>
                          <tr>
                            <td>
                              <%= i+1 %>
                            </td>
                            <td><b>
                              <%= category[i].categoryName %>
                            </b></td>
                            <td>
                              <b>
                              <%= category[i].description.substring(0, 40) %>
                            </b>
                          </td>
                            <td>
                              <% if (category[i].is_active) { %>
                                <span class="status">Active</span>
                              <% } else { %>
                                <span class="status">Inactive</span>
                              <% } %>
                            </td>
                            <td class="text-end">
                              <div>
                                <a href="/admin/categoryEdit?id=<%= category[i]._id %>" class="btn btn-light rounded btn-sm font-sm me-2">Edit</a>
                                &nbsp;
                                <% if (category[i].is_active) { %>
                                  <a href="/admin/categoryBlock?id=<%= category[i]._id %>" id="btnBlock">Block</a>
                                <% } else { %>
                                  <a href="/admin/categoryUnblock?id=<%= category[i]._id %>" id="btnUnblock">Unblock</a>
                                <% } %>
                              </div>
                            </td>
                          </tr>
                        <% } %>
                      </tbody>
                      
                    </table>
                  <% } %>
                  
                </div>
              </div>
            </div>
            <!-- .row // -->
          </div>
          <!-- card body .// -->
        </div>
        <!-- card .// -->
      </section>
      
      <!-- content-main end// -->
    </main>
    <script src="admin-assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="admin-assets/js/vendors/bootstrap.bundle.min.js"></script>
