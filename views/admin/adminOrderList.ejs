  <head>
    <meta charset="utf-8" />
    <title>Admin Order List</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:title" content="" />
    <meta property="og:type" content="" />
    <meta property="og:url" content="" />
    <meta property="og:image" content="" />
    <!-- Favicon -->
    <link
      rel="shortcut icon"
      type="image/x-icon"
      href="/user-assets/images/icons/FAVICON SW.png"
    />
    <!-- Template CSS -->
    <link href="admin-assets/css/main.css" rel="stylesheet" type="text/css" />
    <style>
      /* Pagination Container */
      .pagination {
        display: flex;
        justify-content: center; /* Centers the pagination */
        padding-left: 0;
        margin-top: 20px;
      }

      /* Pagination List Items */
      .pagination .page-item {
        display: inline-block;
        margin: 0 4px;
      }

      /* Page Link Styles */
      .pagination .page-link {
        color: #000000; /* Bootstrap Primary Blue */
        text-decoration: none;
        padding: 8px 16px;
        border: 1px solid #ddd;
        border-radius: 5px;
        transition: background-color 0.3s, color 0.3s;
        font-size: 14px;
        font-weight: 500;
      }

      /* Hover Effects for Page Links */
      .pagination .page-link:hover {
        background-color: #000000; /* Hover Background */
        color: white; /* Hover Text */
        border-color: #000000;
      }

      /* Active Page Styles */
      .pagination .page-item.active .page-link {
        background-color: #000000; /* Active Background */
        color: white; /* Active Text Color */
        border-color: #000000; /* Active Border */
      }

      /* Disabled Page Links */
      .pagination .page-item.disabled .page-link {
        color: #ccc;
        pointer-events: none;
        background-color: #f1f1f1; /* Disabled Background */
        border-color: #ddd;
      }

      /* Mobile-Friendly Adjustments */
      @media (max-width: 768px) {
        .pagination .page-link {
          padding: 6px 10px; /* Smaller padding on mobile */
          font-size: 12px; /* Smaller font size on mobile */
        }
      }
    </style>
  </head>

  <body>
    <div class="screen-overlay"></div>
    <%- include('./partials/adminAside.ejs') %>
    <main class="main-wrap">
      <%- include('./partials/adminNav.ejs') %> <% if (locals.orderedData &&
      orderedData.length > 0) { %>

      <section class="content-main">
        <div class="content-header">
          <div>
            <h2 class="content-title card-title">Order List</h2>
          </div>
        </div>
        <div class="card mb-4">
          <header class="card-header"></header>
          <!-- card-header end// -->
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Order ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Total</th>
                    <th scope="col">Status</th>
                    <th scope="col">Date & Time</th>
                    <th scope="col" class="text-end">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% for (let i = 0; i < orderedData.length; i++) { %>
                  <tr>
                    <td><b><%= orderedData[i].orderId %></b></td>
                    <td>
                      <%= orderedData[i].userId ? orderedData[i].userId.name :
                      'Deleted User' %>
                    </td>
                    <td>
                      <%= orderedData[i].userId ? orderedData[i].userId.email :
                      'N/A' %>
                    </td>
                    <td><%= orderedData[i].totalAmount %></td>
                    <td>
                      <span
                        class="badge rounded-pill order-status-badge"
                        data-status="<%= orderedData[i].orderStatus %>"
                      >
                        <%= orderedData[i].orderStatus %>
                      </span>
                    </td>
                    <td>
                      <%= new
                      Date(orderedData[i].orderDate).toLocaleDateString() %>,
                      <%= new
                      Date(orderedData[i].orderDate).toLocaleTimeString() %>
                    </td>
                    <td class="text-end">
                      <a
                        href="/admin/orderInfo?id=<%= orderedData[i]._id %>"
                        class="btn btn-md rounded font-sm"
                        >Detail</a
                      >
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
            <!-- table-responsive //end -->

            <!-- Pagination Controls -->
            <nav aria-label="Page navigation">
              <ul class="pagination justify-content-center">
                <% if (page > 1) { %>
                <li class="page-item">
                  <a
                    class="page-link"
                    href="/admin/orderMng?page=<%= page - 1 %>"
                    >Previous</a
                  >
                </li>
                <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= i === page ? 'active' : '' %>">
                  <a class="page-link" href="/admin/orderMng?page=<%= i %>"
                    ><%= i %></a
                  >
                </li>
                <% } %> <% if (page < totalPages) { %>
                <li class="page-item">
                  <a
                    class="page-link"
                    href="/admin/orderMng?page=<%= page + 1 %>"
                    >Next</a
                  >
                </li>
                <% } %>
              </ul>
            </nav>
          </div>
          <!-- card-body end// -->
        </div>
        <!-- card end// -->
      </section>
      <!-- content-main end// -->

      <% } else { %>
      <section class="content-main">
        <div class="content-header">
          <div>
            <h2 class="content-title card-title">Order List</h2>
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-body text-center">
            <h4>No orders updated</h4>
          </div>
        </div>
      </section>
      <% } %>
    </main>
    <script src="admin-assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="admin-assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="admin-assets/js/vendors/select2.min.js"></script>
    <script src="admin-assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="admin-assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="admin-assets/js/main.js" type="text/javascript"></script>
    <script>
      function getStatusClass(orderStatus) {
        switch (orderStatus) {
          case "Pending":
            return "alert-warning"; // Orange
          case "Order Placed":
            return "alert-success"; // Green
          case "Shipped":
            return "alert-warning"; // Orange
          case "Delivered":
            return "alert-primary"; // Blue
          case "Cancelled":
            return "alert-danger"; // Red
          case "Returned":
            return "alert-danger"; // Red
          default:
            return "alert-secondary"; // Default color (optional)
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        const badges = document.querySelectorAll(".order-status-badge");

        badges.forEach(function (badge) {
          const status = badge.getAttribute("data-status");
          badge.classList.add(getStatusClass(status));
        });
      });
    </script>
  </body>
</html>
