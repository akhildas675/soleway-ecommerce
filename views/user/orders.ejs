    <!-- Main Content -->
    <div class="orders-wrapper">
        <!-- Page Header -->
        <div class="page-header">
            <h2><i class="fas fa-shopping-bag"></i> My Orders</h2>
            <p>Track and manage all your orders in one place</p>
        </div>

        <!-- Account Navigation -->
        <div class="account-nav">
            <a href="/Account"><i class="fas fa-home"></i> Dashboard</a>
            <a href="/orders" class="active"><i class="fas fa-shopping-bag"></i> Orders</a>
            <a href="/wallet"><i class="fas fa-wallet"></i> Wallet</a>
            <a href="/coupons"><i class="fas fa-ticket-alt"></i> Coupons</a>
            <a href="/address"><i class="fas fa-map-marker-alt"></i> Addresses</a>
        </div>

        <% if (orderedData && orderedData.length > 0) { %>
            <!-- Orders List -->
            <div class="order-list-container">
                <% for (let i = 0; i < orderedData.length; i++) { %>
                    <div class="order-card">
                        <div class="order-card-header">
                            <div class="order-header-top">
                                <div class="order-id">
                                    <i class="fas fa-hashtag"></i> <%= orderedData[i].orderId %>
                                </div>
                                <div class="order-date">
                                    <i class="far fa-calendar"></i>
                                    <%= new Date(orderedData[i].orderDate).toLocaleDateString('en-GB', {
                                        day: '2-digit',
                                        month: 'short',
                                        year: 'numeric'
                                    }) %>
                                </div>
                            </div>
                            <div class="order-status <%= orderedData[i].orderStatus === 'Cancelled' ? 'status-cancelled' : orderedData[i].orderStatus === 'Order Placed' ? 'status-placed' : orderedData[i].orderStatus === 'Delivered' ? 'status-delivered' : 'status-processing' %>">
                                <i class="fas fa-circle"></i>
                                <%= orderedData[i].orderStatus %>
                            </div>
                        </div>

                        <div class="order-products">
                            <% for (let j = 0; j < orderedData[i].products.length; j++) { %>
                                <% if (orderedData[i].products[j].productId) { %>
                                    <div class="product-item">
                                        <div class="product-image">
                                            <img src="<%= orderedData[i].products[j].productId.images[0] %>" alt="Product">
                                        </div>
                                        <div class="product-info">
                                            <div class="product-name">
                                                <%= orderedData[i].products[j].productId.productName %>
                                            </div>
                                            <div class="product-meta">
                                                <span><i class="fas fa-box"></i> Qty: <%= orderedData[i].products[j].quantity %></span>
                                                <span><i class="fas fa-ruler"></i> Size: <%= orderedData[i].products[j].size %></span>
                                            </div>
                                        </div>
                                        <div class="product-price">
                                            â‚¹<%= orderedData[i].products[j].productId.realPrice %>
                                        </div>
                                    </div>
                                <% } %>
                            <% } %>
                        </div>

                        <div class="order-card-footer">
                            <div class="order-total">
                                Total: <strong>â‚¹<%= orderedData[i].totalAmount %></strong>
                            </div>
                            <a href="/orderDetails?id=<%= orderedData[i]._id %>" class="btn-view-details">
                                View Details <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                <% } %>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <div class="pagination-wrapper">
                    <ul class="pagination">
                        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                            <a class="page-link" href="?page=<%= currentPage - 1 %>">
                                <i class="fas fa-chevron-left"></i> Previous
                            </a>
                        </li>

                        <% for (let i = 1; i <= Math.min(5, totalPages); i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>

                        <% if (totalPages > 5 && currentPage < totalPages - 1) { %>
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        <% } %>

                        <% if (totalPages > 5) { %>
                            <li class="page-item <%= currentPage === totalPages ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= totalPages %>"><%= totalPages %></a>
                            </li>
                        <% } %>

                        <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                            <a class="page-link" href="?page=<%= currentPage + 1 %>">
                                Next <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            <% } %>

        <% } else { %>
            <!-- Empty State -->
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-shopping-bag"></i>
                </div>
                <h3>No Orders Yet</h3>
                <p>You haven't placed any orders yet. Start shopping to see your orders here!</p>
                <a href="/Shop" class="btn-shop-now">
                    <i class="fas fa-shopping-cart"></i> Start Shopping
                </a>
            </div>
        <% } %>
    </div>

