<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Account - Soleway</title>
    <link rel="shortcut icon" href="/user-assets/images/icons/FAVICON SW.png" type="image/png">
    <link rel="stylesheet" href="/userMng-assets/css/vendor/vendor.min.css">
    <link rel="stylesheet" href="/userMng-assets/css/plugins/plugins.min.css">
    <link rel="stylesheet" href="/userMng-assets/css/style.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <%- include('./partials/solewayCss.ejs') %>
    
    <link rel="stylesheet" href="/userMng-assets/css/dashborad.css">
   
</head>
<body>
     <%- include('./partials/userMngHeader.ejs') %>
    <!-- Breadcrumb -->
    <% if (locals.findUser) { %>
    <div class="breadcrumb-section breadcrumb-bg-color--white">
        <div class="breadcrumb-wrapper">
            <div class="container">
                <div class="col-12">
                    <h4>Welcome back,</h4>
                    <h3 class="breadcrumb-title"><%= findUser.name %></h3>
                    <div class="breadcrumb-nav breadcrumb-nav-color--black breadcrumb-nav-hover-color--white">
                        <nav aria-label="breadcrumb">
                            <ul>
                                <li><a href="/">Home</a></li>
                                <li><a href="/Shop">Shop</a></li>
                                <li class="active" aria-current="page">My Account</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="dashboard-wrapper">
        <div class="page-header">
            <h2><i class="fas fa-user-circle"></i> Account Dashboard</h2>
            <p>Manage your account, orders, and preferences from one place</p>
        </div>

        <div class="account-nav">
            <a href="/Account" class="active"><i class="fas fa-home"></i> Dashboard</a>
            <a href="/orders"><i class="fas fa-shopping-bag"></i> Orders</a>
            <a href="/wallet"><i class="fas fa-wallet"></i> Wallet</a>
            <a href="/coupons"><i class="fas fa-ticket-alt"></i> Coupons</a>
            <a href="/addresses"><i class="fas fa-map-marker-alt"></i> Addresses</a>
        </div>

        <!-- Quick Stats -->
        <div class="stats-grid">
            <div class="stat-card orders">
                <div class="stat-icon">
                    <i class="fas fa-shopping-bag"></i>
                </div>
                <div class="stat-value"><%= orderCount || 0 %></div>
                <div class="stat-label">Total Orders</div>
                <a href="/orders" class="stat-link">
                    View Orders <i class="fas fa-arrow-right"></i>
                </a>
            </div>

            <div class="stat-card wallet">
                <div class="stat-icon">
                    <i class="fas fa-wallet"></i>
                </div>
                <div class="stat-value">â‚¹<%= wallet ? wallet.balance.toFixed(2) : '0.00' %></div>
                <div class="stat-label">Wallet Balance</div>
                <a href="/wallet" class="stat-link">
                    Manage Wallet <i class="fas fa-arrow-right"></i>
                </a>
            </div>

            <div class="stat-card coupons">
                <div class="stat-icon">
                    <i class="fas fa-ticket-alt"></i>
                </div>
                <div class="stat-value"><%= coupon ? coupon.length : 0 %></div>
                <div class="stat-label">Available Coupons</div>
                <a href="/coupons" class="stat-link">
                    View Coupons <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="quick-actions-section">
            <h3><i class="fas fa-bolt"></i> Quick Actions</h3>
            <div class="actions-grid">
                <a href="/orders" class="action-btn">
                    <div class="action-icon">
                        <i class="fas fa-shopping-bag"></i>
                    </div>
                    <span>Track Orders</span>
                </a>
                <a href="/wallet" class="action-btn">
                    <div class="action-icon">
                        <i class="fas fa-plus-circle"></i>
                    </div>
                    <span>Add Money</span>
                </a>
                <a href="/addresses" class="action-btn">
                    <div class="action-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <span>Manage Addresses</span>
                </a>
                <a href="/Shop" class="action-btn">
                    <div class="action-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <span>Continue Shopping</span>
                </a>
            </div>
        </div>

        <!-- Profile Information -->
        <div class="profile-section">
            <h3><i class="fas fa-user"></i> Profile Information</h3>
            <div class="profile-info">
                <div class="profile-item">
                    <label>Full Name</label>
                    <div class="value"><%= findUser.name %></div>
                </div>
                <div class="profile-item">
                    <label>Email Address</label>
                    <div class="value"><%= findUser.email %></div>
                </div>
                <div class="profile-item">
                    <label>Mobile Number</label>
                    <div class="value"><%= findUser.mobile || 'Not provided' %></div>
                </div>
                <div class="profile-item">
                    <label>Member Since</label>
                    <div class="value"><%= new Date(findUser.createdAt).toLocaleDateString('en-GB', {
                        day: 'numeric', month: 'short', year: 'numeric'
                    }) %></div>
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <%- include('./partials/userFooter.ejs') %>

    <script src="/userMng-assets/js/vendor/vendor.min.js"></script>
    <script src="/userMng-assets/js/plugins/plugins.min.js"></script>
    <script src="/userMng-assets/js/main.js"></script>
</body>
</html>