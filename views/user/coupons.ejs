<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Coupons - Soleway</title>
    <link rel="shortcut icon" href="/user-assets/images/icons/FAVICON SW.png" type="image/png">
    <link rel="stylesheet" href="/userMng-assets/css/vendor/vendor.min.css">
    <link rel="stylesheet" href="/userMng-assets/css/plugins/plugins.min.css">
    <link rel="stylesheet" href="/userMng-assets/css/style.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <%- include('./partials/solewayCss.ejs') %>
    <link rel="stylesheet" href="/userMng-assets/css/coupon.css">

</head>
<body>
    
       <%- include('./partials/userMngHeader.ejs') %>
    <!-- Breadcrumb -->
    <div class="breadcrumb-section breadcrumb-bg-color--white">
        <div class="breadcrumb-wrapper">
            <div class="container">
                <div class="col-12">
                    <h3 class="breadcrumb-title">My Coupons</h3>
                    <div class="breadcrumb-nav breadcrumb-nav-color--black breadcrumb-nav-hover-color--white">
                        <nav aria-label="breadcrumb">
                            <ul>
                                <li><a href="/">Home</a></li>
                                <li><a href="/Account">My Account</a></li>
                                <li class="active" aria-current="page">Coupons</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="coupons-wrapper">
        <div class="page-header">
            <h2><i class="fas fa-ticket-alt"></i> My Coupons</h2>
            <p>Save money on your purchases with exclusive discount codes</p>
        </div>

        <div class="account-nav">
            <a href="/Account"><i class="fas fa-home"></i> Dashboard</a>
            <a href="/orders"><i class="fas fa-shopping-bag"></i> Orders</a>
            <a href="/wallet"><i class="fas fa-wallet"></i> Wallet</a>
            <a href="/coupons" class="active"><i class="fas fa-ticket-alt"></i> Coupons</a>
            <a href="/addresses"><i class="fas fa-map-marker-alt"></i> Addresses</a>
        </div>

        <% if (coupons && coupons.length > 0) { %>
            <div class="coupons-grid">
                <% for (let i = 0; i < coupons.length; i++) { %>
                    <div class="coupon-card">
                        <div class="coupon-header">
                            <div class="coupon-discount"><%= coupons[i].discountPercentage || coupons[i].discountAmount %>% OFF</div>
                            <div class="coupon-name"><%= coupons[i].couponName %></div>
                        </div>
                        <div class="coupon-body">
                            <div class="coupon-code-section">
                                <span class="coupon-code" id="code-<%= i %>"><%= coupons[i].couponCode %></span>
                                <button class="copy-btn" onclick="copyCouponCode('code-<%= i %>', '<%= coupons[i].couponCode %>')">
                                    <i class="fas fa-copy"></i> Copy
                                </button>
                            </div>
                            <div class="coupon-details">
                                <div class="coupon-detail-item">
                                    <i class="far fa-calendar"></i>
                                    <span>Expires: <%= new Date(coupons[i].expiryDate).toLocaleDateString('en-GB', {
                                        day: 'numeric', month: 'short', year: 'numeric'
                                    }) %></span>
                                </div>
                                <div class="coupon-detail-item">
                                    <i class="fas fa-rupee-sign"></i>
                                    <span>Min. Purchase: â‚¹<%= coupons[i].minimumPurchase || 0 %></span>
                                </div>
                                <div class="coupon-detail-item">
                                    <i class="fas fa-chart-line"></i>
                                    <span>Used <%= coupons[i].timesUsed || 0 %> times</span>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-ticket-alt"></i>
                </div>
                <h3>No Coupons Available</h3>
                <p>Check back later for exclusive discount codes and special offers!</p>
                <a href="/Shop" class="btn-shop">
                    <i class="fas fa-shopping-cart"></i> Continue Shopping
                </a>
            </div>
        <% } %>
    </div>

    <%- include('./partials/userFooter.ejs') %>

    <script src="/userMng-assets/js/vendor/vendor.min.js"></script>
    <script src="/userMng-assets/js/plugins/plugins.min.js"></script>
    <script src="/userMng-assets/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

    <script>
        function copyCouponCode(elementId, code) {
            navigator.clipboard.writeText(code).then(() => {
                Toastify({
                    text: "Coupon code copied: " + code,
                    duration: 3000,
                    gravity: "top",
                    position: "right",
                    backgroundColor: "#f59e0b",
                    stopOnFocus: true,
                }).showToast();
            }).catch(err => {
                console.error('Failed to copy:', err);
            });
        }
    </script>
</body>
</html>