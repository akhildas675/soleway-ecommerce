       /* Success Message Styling */
       .success-message {
        text-align: center;
        color: #000000;
        margin-top: 30px;
        font-family: 'Arial', sans-serif;
    }

    .success-message h1 {
        font-size: 48px;
        font-weight: bold;
    }

    .success-message p {
        font-size: 18px;
        margin-top: 10px;
    }

    /* Coin Rotation */
    .coin {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 50px;
    }

    .coin-img {
        width: 100px;
        height: 100px;
        animation: rotateCoin 2s infinite;
    }

    @keyframes rotateCoin {
        0% {
            transform: rotateY(0);
        }
        100% {
            transform: rotateY(360deg);
        }
    }

    /* Fireworks */
    #fireworks {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 10;
    }

    /* Button Styling */
    .back-button {
        text-align: center;
        margin-top: 30px;
    }

    .btnq {
        background-color: #000000; /* Green background */
        border: none; /* No border */
        color: white; /* White text */
        padding: 15px 32px; /* Padding */
        text-align: center; /* Centered text */
        text-decoration: none; /* No underline */
        display: inline-block; /* Inline-block element */
        font-size: 16px; /* Font size */
        margin: 4px 2px; /* Margins */
        cursor: pointer; /* Pointer cursor on hover */
        border-radius: 5px; /* Rounded corners */
        transition: background-color 0.3s; /* Transition effect */
    }

    .btn:hover {
        background-color: #2f2f2f; /* Darker green on hover */
    }

    /* Background styling */
    body {
        background-color: #f9f9f9;
        position: relative;
        height: 100vh;
    }
</style>
		
