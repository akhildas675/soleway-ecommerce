<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Addresses - Soleway</title>
    <link rel="shortcut icon" href="/user-assets/images/icons/FAVICON SW.png" type="image/png">
    <link rel="stylesheet" href="/userMng-assets/css/vendor/vendor.min.css">
    <link rel="stylesheet" href="/userMng-assets/css/plugins/plugins.min.css">
    <link rel="stylesheet" href="/userMng-assets/css/style.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <%- include('./partials/solewayCss.ejs') %>
    
    <link rel="stylesheet" href="/userMng-assets/css/myAddress.css">


   
</head>
<body>
    <%- include('./partials/userMngHeader.ejs') %>

    <!-- Breadcrumb -->
    <div class="breadcrumb-section breadcrumb-bg-color--white">
        <div class="breadcrumb-wrapper">
            <div class="container">
                <div class="col-12">
                    <h3 class="breadcrumb-title">My Addresses</h3>
                    <div class="breadcrumb-nav breadcrumb-nav-color--black breadcrumb-nav-hover-color--white">
                        <nav aria-label="breadcrumb">
                            <ul>
                                <li><a href="/">Home</a></li>
                                <li><a href="/Account">My Account</a></li>
                                <li class="active" aria-current="page">Addresses</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="addresses-wrapper">
        <div class="page-header">
            <h2><i class="fas fa-map-marker-alt"></i> My Addresses</h2>
            <p>Manage your shipping and billing addresses</p>
        </div>

        <div class="account-nav">
            <a href="/Account"><i class="fas fa-home"></i> Dashboard</a>
            <a href="/orders"><i class="fas fa-shopping-bag"></i> Orders</a>
            <a href="/wallet"><i class="fas fa-wallet"></i> Wallet</a>
            <a href="/coupons"><i class="fas fa-ticket-alt"></i> Coupons</a>
            <a href="/addresses" class="active"><i class="fas fa-map-marker-alt"></i> Addresses</a>
        </div>

        <a href="/add-address" class="add-address-btn">
            <i class="fas fa-plus-circle"></i> Add New Address
        </a>

        <% if (addresses && addresses.length > 0) { %>
            <div class="addresses-grid">
                <% for (let i = 0; i < addresses.length; i++) { %>
                    <div class="address-card">
                        <div class="address-header">
                            <span class="address-type">
                                <i class="fas fa-home"></i>
                                Address <%= i + 1 %>
                            </span>
                            <div class="address-actions">
                                <a href="/addressEditView?id=<%= addresses[i]._id %>" class="action-btn edit-btn" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button onclick="deleteAddress('<%= addresses[i]._id %>')" class="action-btn delete-btn" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>

                        <div class="address-details">
                            <div class="address-name">
                                <i class="fas fa-user"></i> <%= addresses[i].name %>
                            </div>

                            <div class="address-field">
                                <i class="fas fa-map-marker-alt"></i>
                                <div class="value">
                                    <%= addresses[i].homeAddress %><br>
                                    <%= addresses[i].city %>, <%= addresses[i].district %><br>
                                    <%= addresses[i].state %> - <%= addresses[i].pincode %>
                                </div>
                            </div>

                            <div class="address-field">
                                <i class="fas fa-phone"></i>
                                <div class="value"><%= addresses[i].mobile %></div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <h3>No Addresses Found</h3>
                <p>Add your first address to make checkout faster and easier!</p>
                <a href="/add-address" class="add-address-btn">
                    <i class="fas fa-plus-circle"></i> Add Your First Address
                </a>
            </div>
        <% } %>
    </div>

    <%- include('./partials/userFooter.ejs') %>

    <script src="/userMng-assets/js/vendor/vendor.min.js"></script>
    <script src="/userMng-assets/js/plugins/plugins.min.js"></script>
    <script src="/userMng-assets/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="/userMng-assets/js/myAddresses.js"></script>

    
</body>
</html>