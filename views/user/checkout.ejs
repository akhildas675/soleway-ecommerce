    <!-- Breadcrumb -->
    <div class="breadcrumb-section">
        <div class="breadcrumb-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3 class="breadcrumb-title">Checkout</h3>
                        <div class="breadcrumb-nav">
                            <nav aria-label="breadcrumb">
                                <ul>
                                    <li><a href="/">Home</a></li>
                                    <li>/</li>
                                    <li><a href="/Shop">Shop</a></li>
