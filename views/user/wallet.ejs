    <!-- Main Content -->
    <div class="wallet-wrapper">
        <!-- Page Header -->
        <div class="page-header">
            <h2><i class="fas fa-wallet"></i> My Wallet</h2>
            <p>Manage your wallet balance and view transaction history</p>
        </div>

        <!-- Account Navigation -->
        <div class="account-nav">
            <a href="/Account"><i class="fas fa-home"></i> Dashboard</a>
            <a href="/orders"><i class="fas fa-shopping-bag"></i> Orders</a>
            <a href="/wallet" class="active"><i class="fas fa-wallet"></i> Wallet</a>
            <a href="/coupons"><i class="fas fa-ticket-alt"></i> Coupons</a>
            <a href="/address"><i class="fas fa-map-marker-alt"></i> Addresses</a>
        </div>

        <!-- Wallet Balance Card -->
        <div class="wallet-balance-card">
            <div class="balance-header">
                <div>
                    <div class="balance-label">Current Balance</div>
                    <div class="balance-amount">₹<%= wallet ? wallet.balance.toFixed(2) : '0.00' %></div>
                </div>
                <div class="wallet-icon">
                    <i class="fas fa-wallet"></i>
                </div>
            </div>
            <div class="add-money-section">
                <input type="number" id="add-amount" class="money-input" placeholder="Enter amount to add" min="1">
                <button class="add-money-btn" onclick="addToWallet()">
                    <i class="fas fa-plus-circle"></i> Add Money
                </button>
            </div>
        </div>

        <!-- Transaction History -->
        <div class="transactions-card">
            <div class="transactions-header">
                <h3><i class="fas fa-history"></i> Transaction History</h3>
            </div>

            <% if (transactions && transactions.length > 0) { %>
                <div class="transaction-list">
                    <% for (let i = 0; i < transactions.length; i++) { %>
                        <div class="transaction-item <%= transactions[i].type === 'Debit' ? 'debit' : 'credit' %>">
                            <div class="transaction-info">
                                <div class="transaction-icon <%= transactions[i].type === 'Debit' ? 'debit' : 'credit' %>">
                                    <i class="fas fa-<%= transactions[i].type === 'Debit' ? 'arrow-down' : 'arrow-up' %>"></i>
                                </div>
                                <div class="transaction-details">
                                    <h4><%= transactions[i].type || 'Credit' %> Transaction</h4>
                                    <div class="transaction-date">
                                        <i class="far fa-calendar"></i>
                                        <%= new Date(transactions[i].transactionDate).toLocaleString('en-GB', {
                                            day: '2-digit',
                                            month: 'short',
                                            year: 'numeric',
                                            hour: '2-digit',
                                            minute: '2-digit'
                                        }) %>
                                    </div>
                                </div>
                            </div>
                            <div class="transaction-amount">
                                <div class="amount-value <%= transactions[i].type === 'Debit' ? 'debit' : 'credit' %>">
                                    <%= transactions[i].type === 'Debit' ? '-' : '+' %>₹<%= transactions[i].amount.toFixed(2) %>
                                </div>
                                <span class="transaction-status <%= transactions[i].status === 'Completed' || transactions[i].status === 'Success' ? 'completed' : 'pending' %>">
                                    <%= transactions[i].status %>
                                </span>
                            </div>
                        </div>
                    <% } %>
                </div>

                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                    <div class="pagination-wrapper">
                        <ul class="pagination">
                            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                <a class="page-link" href="?page=<%= currentPage - 1 %>">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </a>
                            </li>

                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>

                            <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                <a class="page-link" href="?page=<%= currentPage + 1 %>">
                                    Next <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                <% } %>

            <% } else { %>
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="fas fa-receipt"></i>
                    </div>
                    <h3>No Transactions Yet</h3>
                    <p>Your transaction history will appear here once you add money or make purchases.</p>
                </div>
            <% } %>
