        <script>
            function toggleWishList(productId) {
                fetch('/toggleWishlist', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ productId: productId })
                })
                .then(response => response.json())
                .then(data => {
                    const button = document.querySelector(`.js-addwish-b2[data-product-id="${productId}"]`);
                    const icon = button ? button.querySelector('i') : null;
                    const productElement = document.querySelector(`.isotope-item[data-product-id="${productId}"]`);

                    if (data.success) {
                        if (data.action === 'added') {
                            if (button && icon) {
                                button.classList.add('active');
                                icon.classList.remove('bi-heart');
                                icon.classList.add('bi-heart-fill');
                            }
                        } else {
                            if (button && icon) {
                                button.classList.remove('active');
                                icon.classList.remove('bi-heart-fill');
                                icon.classList.add('bi-heart');
                            }
                            // Remove the product from the DOM since it's no longer in the wishlist
                            if (productElement) {
                                productElement.remove();
                            }
                            // Check if wishlist is empty and show empty message
                            const wishlistItems = document.querySelectorAll('.isotope-item');
                            if (wishlistItems.length === 0) {
                                const container = document.querySelector('.isotope-grid');
                                container.innerHTML = '<div class="col-12"><p>Your wishlist is empty.</p></div>';
                            }
                        }
                        // Update wishlist count in header
                        const wishlistIcons = document.querySelectorAll('.icon-header-noti[data-notify]');
                        wishlistIcons.forEach(icon => {
                            if (icon.getAttribute('href') === '/Wishlist') {
                                const newCount = data.wishlistCount || 0;
                                icon.setAttribute('data-notify', newCount);
                            }
                        });
                    } else {
                        console.error('Failed to update wishlist:', data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
            }
        </script>
